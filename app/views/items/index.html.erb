<div id="cuadro" style="background: #B0A9AA; margin-left: 30%; margin-right: 30%; border: solid 2px">
  <h1>Items</h1>
  <table border=2 align="center" style="margin-top: 5px; blackground: white">
    <thead>
      <tr>
        <th>Nombre item</th>
        <th>Descripcion item</th>
        <th>Estado item</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.NombreItem %></td>
          <td><%= item.DescripcionItem %></td>
          <% if item.EstadoItem? %>
            <td>Habilitado</td>
          <% else %>
            <td>DesHabilitado</td>
          <% end %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Item', new_item_path, :class => "btn btn-default", :style => "margin-left: 10px; margin-bottom: 20px" %>
</div>

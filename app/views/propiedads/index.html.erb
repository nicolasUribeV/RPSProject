<div id="cuadro" style="background: #B0A9AA; margin-left: 20%; margin-right: 20%; border: solid 2px">
  <h1>Propiedades</h1>
  <div style="overflow: auto; word-break: break-all; height: 300px; border: solid 2px; margin-left: 5px; margin-right: 5px">
    <table border=2 align="center" style="table-layout: fixed; blackground: white">
      <thead>
        <tr>
          <th width="10%">Ubicacion</th>
          <th width="10%">Tipo de propiedad</th>
          <th width="10%">Propietario</th>
          <th width="10%">Direccion de propiedad</th>
          <th width="10%">Equipada con muebles</th>
          <th width="10%">M2 totales</th>
          <th width="20%">Descripcion</th>
          <th width="10%">Habilitada</th>
          <th width="5%"></th>
        </tr>
      </thead>

      <tbody>
        <% @propiedads.each do |propiedad| %>
          <tr>
            <td><%= propiedad.Ubicacion %></td>
            <td><%= propiedad.TipoPropiedad %></td>
            <td><%= propiedad.Propietario %></td>
            <td><%= propiedad.DireccionPropiedad %></td>
            <td><%= propiedad.EquipadaMuebles %></td>
            <td><%= propiedad.M2Totales %></td>
            <td><%= propiedad.Descripcion %></td>
            <td><%= propiedad.Habilitada %></td>
            <td><%= link_to 'Show', propiedad %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'Nueva Propiedad', new_propiedad_path, :class => "btn btn-default", :style => "margin-left: 10px; margin-bottom: 20px" %>
</div>
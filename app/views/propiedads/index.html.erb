<div id="cuadro" style="background: #B0A9AA; margin-left: 30%; margin-right: 30%; border: solid 2px">
  <h1>Propiedades</h1>
  <div style="overflow: auto; word-break: break-all; height: 300px; border: solid 2px; margin-left: 5px; margin-right: 5px">
    <%= search_form_for @q do |f| %>
      <%= f.label :TipoPropiedad_id %>
      <%= f.select :TipoPropiedad_id_eq, options_from_collection_for_select(TipoPropiedad.all, "id", "NombreTipo"), include_blank: false %>
      <%= f.submit %>
    <% end %>
    <table border=2 align="center" style="table-layout: fixed; blackground: white">
      <thead>
        <tr>
          <th>Ubicacion</th>
          <th>Tipopropiedad</th>
          <th>Propietario</th>
          <th>Direccionpropiedad</th>
          <th>Estacionamiento</th>
          <th>Bodega</th>
          <th>Equipadamuebles</th>
          <th>M2totales</th>
          <th>Descripcion</th>
          <th>Habilitada</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @propiedads.each do |propiedad| %>
          <tr>
            <td><%= propiedad.Ubicacion %></td>
            <td><%= propiedad.TipoPropiedad %></td>
            <td><%= propiedad.Propietario %></td>
            <td><%= propiedad.DireccionPropiedad %></td>
            <td><%= propiedad.Estacionamiento %></td>
            <td><%= propiedad.Bodega %></td>
            <td><%= propiedad.EquipadaMuebles %></td>
            <td><%= propiedad.M2Totales %></td>
            <td><%= propiedad.Descripcion %></td>
            <td><%= propiedad.Habilitada %></td>
            <td><%= link_to 'Show', propiedad %></td>
            <td><%= link_to 'Edit', edit_propiedad_path(propiedad) %></td>
            <td><%= link_to 'Destroy', propiedad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New Propiedad', new_propiedad_path, :class => "btn btn-default", :style => "margin-left: 10px; margin-bottom: 20px" %>
</div>
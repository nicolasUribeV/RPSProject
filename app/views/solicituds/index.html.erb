<div id="cuadro" style="background: #B0A9AA; margin-left: 30%; margin-right: 30%; border: solid 2px">
  <h1>Solicitudes</h1>
  <div style="overflow: auto; word-break: break-all; height: 300px; border: solid 2px; margin-left: 5px; margin-right: 5px">
    <table border=2 align="center" style="table-layout: fixed; blackground: white">
      <thead>
        <tr>
          <th>Propiedad</th>
          <th>Arrendatario</th>
          <th>Fechaemision</th>
          <th>Estado</th>
          <th>Tiposolicitud</th>
          <th>Inicio</th>
          <th>Fin</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @solicituds.each do |solicitud| %>
          <tr>
            <td><%= solicitud.Propiedad %></td>
            <td><%= solicitud.Arrendatario %></td>
            <td><%= solicitud.FechaEmision %></td>
            <td><%= solicitud.Estado %></td>
            <td><%= solicitud.TipoSolicitud %></td>
            <td><%= solicitud.inicio %></td>
            <td><%= solicitud.fin %></td>
            <td><%= link_to 'Show', solicitud %></td>
            <td><%= link_to 'Edit', edit_solicitud_path(solicitud) %></td>
            <td><%= link_to 'Destroy', solicitud, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to 'Nueva Solicitud', new_solicitud_path, :class => "btn btn-default", :style => "margin-left: 10px; margin-bottom: 20px" %>
</div>
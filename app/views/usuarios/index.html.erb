<div id="cuadro" style="background: #B0A9AA; margin-left: 10%; margin-right: 10%; border: solid 2px">
  <h1>Usuarios</h1>
  <div style="overflow: auto; word-break: break-all; height: 300px; border: solid 2px; margin-left: 5px; margin-right: 5px">
    <table border=2 align="center" style="table-layout: fixed; blackground: white">
      <thead>
      <tr>
        <th>Rut</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Fechanac</th>
        <th>Mail</th>
        <th>Telefono</th>
        <th>Direccion</th>
        <th>Fecharegistro</th>
        <th>Acceso al sistema</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.Rut %></td>
          <td><%= usuario.Nombre %></td>
          <td><%= usuario.Apellido %></td>
          <td><%= usuario.FechaNac %></td>
          <td><%= usuario.Mail %></td>
          <td><%= usuario.Telefono %></td>
          <td><%= usuario.Direccion %></td>
          <td><%= usuario.FechaRegistro %></td>
          <td><%= usuario.administrador %></td>
          <td><%= link_to 'Mostrar', usuario %></td>
          <td><%= link_to 'Inhabilitar', edit_usuario_path(usuario) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'Nuevo Usuario', new_usuario_path, :class => "btn btn-default", :style => "margin-left: 10px; margin-bottom: 20px" %>
</div>
